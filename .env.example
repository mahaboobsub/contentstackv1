# =================================
# ContentIQ Platform Configuration
# =================================

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
DEBUG=true

# =================================
# Contentstack Configuration
# =================================

# Required: Your Contentstack Stack API Key
CONTENTSTACK_API_KEY=blt_your_stack_api_key_here

# Required: Delivery Token for content fetching
CONTENTSTACK_DELIVERY_TOKEN=cs_your_delivery_token_here

# Optional: Management Token for content creation (required for auto-draft feature)
CONTENTSTACK_MANAGEMENT_TOKEN=cs_your_management_token_here

# Content Environment (development, staging, production)
CONTENTSTACK_ENVIRONMENT=development

# Optional: Launch Project ID for deployment features
CONTENTSTACK_LAUNCH_PROJECT_ID=your_launch_project_id_here

# =================================
# LLM Configuration
# At least one LLM provider is required
# =================================

# Groq API Configuration (Primary LLM)
GROQ_API_KEY=gsk_your_groq_api_key_here

# OpenAI API Configuration (Fallback LLM)
OPENAI_API_KEY=sk-your_openai_api_key_here

# =================================
# Redis Configuration
# =================================

# Redis URL for caching and session management
# For local development: redis://localhost:6379
# For production: redis://your-redis-host:6379
REDIS_URL=redis://localhost:6379

# =================================
# Security Configuration
# =================================

# Session Secret (generate a random string)
SESSION_SECRET=your_super_secret_session_key_here

# CORS Configuration (comma-separated domains)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,https://yourdomain.com

# =================================
# API Configuration
# =================================

# API Base URL (for frontend)
VITE_API_URL=http://localhost:8000

# Widget API URL (for embeddable widget)
WIDGET_API_URL=http://localhost:8000

# =================================
# Analytics Configuration
# =================================

# Enable analytics tracking
ANALYTICS_ENABLED=true

# Analytics retention period (in days)
ANALYTICS_RETENTION_DAYS=90

# =================================
# Feature Flags
# =================================

# Enable voice input feature
ENABLE_VOICE_INPUT=true

# Enable text-to-speech output
ENABLE_TTS_OUTPUT=true

# Enable real-time analytics
ENABLE_REALTIME_ANALYTICS=true

# Enable content gap detection
ENABLE_CONTENT_GAP_DETECTION=true

# Enable auto-draft creation
ENABLE_AUTO_DRAFT_CREATION=true

# =================================
# Deployment Configuration
# =================================

# Production API URL
PRODUCTION_API_URL=https://api.contentiq.app

# CDN URL for widget distribution
CDN_URL=https://cdn.contentiq.app

# Asset URL for images and static files
ASSET_URL=https://assets.contentiq.app

# =================================
# Database Configuration (Optional)
# =================================

# PostgreSQL Database URL (if using database instead of in-memory storage)
# DATABASE_URL=postgresql://username:password@localhost:5432/contentiq

# =================================
# Logging Configuration
# =================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log format (json, simple)
LOG_FORMAT=simple

# Enable request logging
LOG_REQUESTS=true

# =================================
# Performance Configuration
# =================================

# Response timeout (in milliseconds)
RESPONSE_TIMEOUT=30000

# Max concurrent requests
MAX_CONCURRENT_REQUESTS=100

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=60

# =================================
# Email Configuration (Optional)
# =================================

# SMTP Configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@contentiq.app

# =================================
# Monitoring Configuration (Optional)
# =================================

# Application Performance Monitoring
APM_SERVER_URL=https://your-apm-server.com
APM_SECRET_TOKEN=your_apm_token

# Error Tracking
SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io

# =================================
# Development Only
# =================================

# Enable development features
DEV_MODE=true

# Mock external services in development
MOCK_EXTERNAL_SERVICES=false

# Enable detailed error messages
DETAILED_ERRORS=true

# =================================
# Example Values for Quick Setup
# =================================

# Uncomment and modify these for quick local development:

# CONTENTSTACK_API_KEY=blt123456789abcdef
# CONTENTSTACK_DELIVERY_TOKEN=cs987654321fedcba
# GROQ_API_KEY=gsk_abcdef123456789
# SESSION_SECRET=my-super-secret-key-for-development
# REDIS_URL=redis://localhost:6379

# =================================
# Setup Instructions
# =================================

# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your Contentstack credentials from the Developer Hub
# 3. Get your Groq API key from https://console.groq.com/
# 4. Optionally get OpenAI API key from https://platform.openai.com/
# 5. Install and start Redis locally or use a cloud Redis service
# 6. Generate a secure session secret
# 7. Start the application: npm run dev

# =================================
# Security Notes
# =================================

# - Never commit .env files to version control
# - Use different secrets for development and production
# - Rotate API keys regularly
# - Use environment-specific configurations
# - Enable HTTPS in production
# - Restrict CORS origins in production
